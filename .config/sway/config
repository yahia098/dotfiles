######MODES
mode "resize" {
    bindsym Left resize shrink width 10px
    bindsym Down resize grow height 10px
    bindsym Up resize shrink height 10px
    bindsym Right resize grow width 10px
    bindsym Return mode "default"
    bindsym Escape mode "default"
    }
bindsym $mod+r mode "resize"
set $mode_system System
mode "$mode_system" {
    
    bindsym l exec $lock, mode "default"
    bindsym e exit
    bindsym s exec --no-startup-id systemctl suspend, mode "default"
    bindsym r exec --no-startup-id systemctl reboot, mode "default"
    bindsym Shift+s exec --no-startup-id systemctl poweroff -i, mode "default"
    bindsym Shift+r exec --no-startup-id systemctl reboot --firmware-setup, mode "default"
    # return to default mode
    bindsym Return mode "default"
    bindsym Escape mode "default"
    }
bindsym $mod+Shift+e exec dunstify "System" "l ->lock \n e-> exit \n s-> suspend \n r -> reboot \n S->shutdown \n R -> reboot" -t 3000,mode "$mode_system"
mode "Executable" {
  bindsym f exec firefox, mode "default"
  bindsym c exec neovide, mode "default"
  bindsym x exec nemo, mode "default"
  bindsym t exec Telegram, mode "default"
  bindsym l exec lutris, mode "default"
  bindsym z exec evince, mode "default"
  bindsym v exec vlc, mode "default"
  bindsym Return mode "default"
  bindsym Escape mode "default"
  }
  bindsym $mod+d exec dunstify "Apps" " f->firefox \n c->neovide \n x ->nemo \n z->evince \n l->lutris \n t->Telegram \n v->virual machines manager" -t 3000 ,mode "Executable"
